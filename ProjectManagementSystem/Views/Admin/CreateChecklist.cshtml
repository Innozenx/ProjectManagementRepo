                    if (response.success) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Checklist Created!',
                            text: 'Your checklist has been successfully saved.',
                            confirmButtonColor: '#470A67'
                        }).then(() => {
                            window.location.href = "/Admin/Milestones";
                        });
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error!',
                            text: response.message,
                            confirmButtonColor: '#470A67'
                        });
                    }
