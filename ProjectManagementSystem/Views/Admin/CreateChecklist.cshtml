                    console.error("Failed to save milestones: ", error);
                    Swal.fire({
                        icon: 'error',
                        title: 'Error!',
                        text: 'An unexpected error occurred while saving the milestone.',
                        confirmButtonColor: '#470A67'
                    });
                }
            });
        });*@

