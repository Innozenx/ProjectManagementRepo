@model ProjectManagementSystem.Models.ProjectRegister

@{
    ViewBag.Title = "Project Registration • Project Management System";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<head>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>

        .content {
            display: flex;
            justify-content: center;
            align-items: flex-start;
            min-height: 90vh;
            padding: 10px;
            margin-top: 50px;
        }

        .form-container {
            width: 700px;
            background-color: white;
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            padding: 20px 30px;
            animation: fadeIn 0.8s ease-in-out;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        h2 {
            text-align: center;
            color: #470A67; 
            margin-bottom: 10px;
        }

        p {
            text-align: center;
            color: #666; 
            margin-bottom: 20px;
        }

        .form-group {
            position: relative;
            margin-bottom: 20px;
        }

            .form-group input {
                width: 100%;
                padding: 10px;
                border: 1px solid #ccc;
                border-radius: 5px;
                font-size: 16px;
                color: #000; 
                outline: none;
                transition: all 0.3s ease;
                background: transparent;
            }

                .form-group input:focus {
                    border-color: #470A67;
                    box-shadow: 0 0 5px rgba(71, 10, 103, 0.4);
                }

            .form-group label {
                position: absolute;
                top: 50%;
                left: 10px;
                transform: translateY(-50%);
                font-size: 16px;
                color: #999; 
                pointer-events: none;
                transition: all 0.3s ease;
            }

            .form-group input:focus + label,
            .form-group input:not(:placeholder-shown) + label {
                top: -10px;
                left: 10px;
                font-size: 12px;
                color: #470A67;
            }

        .form-text {
            font-size: 12px;
            color: #d9534f;
            margin-top: 5px;
        }

        .form-footer {
            text-align: center;
        }

        .btn-primary {
            background-color: #470A67;
            color: white;
            padding: 10px 30px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
            transition: background-color 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #532c7e;
            }

        @@media (max-width: 768px) {
            .form-container {
                width: 90%;
                padding: 20px;
            }

            .form-group input {
                font-size: 14px;
            }

            .form-group label {
                font-size: 14px;
            }

            .btn-primary {
                width: 100%;
            }
        }
    </style>
</head>

<div class="content">
    <div class="form-container">
        <h2>
            📝 <br /> Project Registration
        </h2>
        <p>
            First, input your project name.
        </p>

        <form id="projectRegistrationForm" name="projectRegistrationForm" enctype="multipart/form-data">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <input type="text" id="project_name" name="project_name" placeholder=" " required />
                <label for="project_name">Project Name</label>
                <small id="error_message" class="form-text" style="display: none;">Project name is required.</small>
            </div>

            <div class="form-footer">
                <button id="submit_project" type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>
</div>

<script>
    $(document).ready(function () {
        $("#projectRegistrationForm").on("submit", function (e) {
            e.preventDefault();
            const projectName = $("#project_name").val().trim();
            const errorMessage = $("#error_message");

            if (!projectName) {
                $("#project_name").css("border-color", "#d9534f");
                errorMessage.text("Project name is required.").show();
                return;
            } else {
                $("#project_name").css("border-color", "");
                errorMessage.hide();
            }

          $.ajax({
                method: "POST",
                url: "@Url.Action("Register_Project", "Admin")",
                data: { "name": projectName },
                success: function (res) {
                    if (res.status) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Project Registered',
                            text: 'Your project name has been successfully registered! Redirecting to Project Onboarding...',
                            confirmButtonColor: '#470A67',
                        }).then(() => {
                            window.location.href = "@Url.Action("AddProject", "Checklist")";
                        });
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Registration Failed',
                            text: res.message,
                            confirmButtonColor: '#d9534f',
                        });
                    }
                },
                error: function () {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: 'An error occurred while submitting the project.',
                        confirmButtonColor: '#d9534f',
                    });
                }
            });
        });

        $("#project_name").on("input", function () {
            if ($(this).val().trim()) {
                $(this).css("border-color", "");
                $("#error_message").hide();
            }
        });
    });
</script>
