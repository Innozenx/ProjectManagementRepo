@model ProjectManagementSystem.Models.projectRegister
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<head>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
</head>

<!-- Main content -->
<div class="content" style="padding-top: 15%">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-8 offset-lg-2">
                <div class="card" style="background-color: white;">
                    <div class="card-header" style="color:#66339A">
                        <h3 class="card-title"><strong>Project Registration</strong></h3>
                    </div>

                    <div style="text-align: center">
                        <label>Project Name: </label>
                        <input type="text" id="project_name" placeholder="Please Enter your Project Name Here" style="width: 50%"/>
                        <br />
                        <span><i class="fa fa-exclamation-triangle" aria-hidden="true" style="color: red"></i> <i>Please make sure that the project name is exactly identical to the project name in the excel file</i></span>
                        <div class="card-footer text-right">
                            <button id="submit_project" type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>

                    <!-- form start -->
                    <form id="onboardingForm" name="onboardingForm" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()

                        <!-- button-->
                        
                    </form>
                </div>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-lg-12">
                <div id="chart_container" class="p-4 bg-light border rounded"></div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
$(document).ready(function(){
            $("#submit_project").on("click", function(){
                var name = $("#project_name").val();
                $.ajax({
                    method: "post",
                    data: {"name" : name},
                    url: "@Url.Action("Register_Project", "Admin")",
                    success: function(res){
                        alert(res.message);
                    }
                });
            });
        });
    </script>
}
