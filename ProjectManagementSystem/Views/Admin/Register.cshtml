    .btn-primary {
        width: 100%;
        background-color: #66339A;
        border: none;
        padding: 12px;
        color: #fff;
        /*font-weight: 600;*/
        border-radius: 8px;
        cursor: pointer;
        font-size: 1rem;
        transition: background-color 0.3s ease;
    }

    .btn-primary:hover {
        background-color: #532c7e;
    }

    .form-text {
        font-size: 0.9rem;
        color: #555;
    }

    .form-footer {
        text-align: right;
        padding-top: 20px;
    }

    .form-group label {
        font-weight: 500;
        font-size: 0.9rem;
        color: #333;
        display: block;
        text-align: left;
        margin-bottom: 5px;
    }
    </style>
</head>

<!-- Main content -->
<div class="content">
    <div class="form-container">
        <h3 class="text-center" style="color: #66339A;">Project Registration</h3>
        <p class="text-center text-muted">First, input your project name title</p>

        <!-- Project Name Input -->
        <form id="projectRegistrationForm" name="projectRegistrationForm" enctype="multipart/form-data">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label for="project_name">Project name</label>
                <input type="text" id="project_name" name="project_name" class="form-control" placeholder="Enter project name" required />
                <small class="form-text">
                    <i class="fa fa-exclamation-triangle" aria-hidden="true" style="color: red"></i> Make sure the project name matches exactly with the Excel file.
                </small>
            </div>

            <!-- Submit Button -->
            <div class="form-footer">
                <button id="submit_project" type="submit" class="btn btn-primary">Submit</button>

            </div>
        </form>
    </div>
</div>

@section scripts {
    <script>
        $(document).ready(function(){
            $("#projectRegistrationForm").on("submit", function(e){
                e.preventDefault();
                var projectName = $("#project_name").val();

                $.ajax({
                    method: "POST",
                    url: "@Url.Action("Register_Project", "Admin")",
                    data: { "name": projectName },
                    success: function(res){
                        alert(res.message);
                    }
                });
            });
        });
    </script>
}
