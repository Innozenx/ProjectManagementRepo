@{
    ViewBag.Title = "Project Registration";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<head>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <style>
         body {
        font-family: 'Poppins', sans-serif;
        background-color: #f4f6f9;
        margin: 0;
        padding: 0;
    }
    /*.content {
        display: flex;
