@{
    ViewBag.Title = "Milestone Management • Project Management System";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid mt-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow border-0 rounded-3">
                <div class="card-body">

                    <div class="text-center mb-4">
                        <h3 class="fw-bold text-dark">
                            📋 <br /> Checklist and Milestone Management
                        </h3>
                        <p class="text-muted">Create and manage milestones per Division.</p>
                    </div>

                    <div class="card shadow-sm bg-white rounded-3">
                        <div class="card-body">
                            <div class="mb-4">
                                <h5 class="fw-bold text-dark">Select Division</h5>
                                <div class="input-group">
                                    <select id="divisionDropdown" class="form-select custom-dropdown" required>
                                        <option value="">Choose Division</option>
                                        @if (ViewBag.Divisions != null)
                                        {
                                            foreach (var division in ViewBag.Divisions as List<SelectListItem>)
                                            {
                                                <option value="@division.Value">@division.Text</option>
                                            }
                                        }
                                    </select>
                                    <button id="addMilestoneBtn" class="btn btn-outline-primary">
                                        <i class="fas fa-plus"></i> Create
                                    </button>
                                </div>
                            </div>

                            <h5 class="fw-bold text-dark">Milestones</h5>
                            <input type="text" id="searchMilestone" class="form-control mb-3" placeholder="Search milestones...">
                            <div class="table-responsive" style="max-height: 400px; overflow-y: auto;">
                                <table class="table table-hover table-bordered" id="milestoneTable">
                                    <thead class="table-light sticky-header">
                                        <tr>
                                            <th>Division</th>
                                            <th>Milestones</th>
                                            <th>Requirements</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div> 
            </div> 
        </div> 
    </div> 
</div> 

<link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background: #f4f6f9;
        color: #333;
    }

    .container-fluid {
        max-width: 1400px;
    }

    .card {
        background: #ffffff;
        box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.08);
        border-radius: 8px;
        padding: 20px;
    }

    .custom-dropdown {
        border-radius: 6px;
        padding: 10px;
        border: 1px solid #ced4da;
        font-size: 16px;
    }

    .table {
        font-size: 14px;
    }

        .table thead {
            background: #f8f9fa;
            font-weight: 600;
        }

    .sticky-header {
        position: sticky;
        top: 0;
        background: #f8f9fa;
        z-index: 2;
    }

    .table-hover tbody tr:hover {
        background: #f1f3f5;
    }


    .btn-outline-primary, .btn-outline-success, .btn-outline-warning, .btn-outline-danger, .btn-outline-info {
        font-weight: 600;
        transition: all 0.3s ease-in-out;
        /*border-width: 2px;*/
    }

    .btn-outline-primary {
        border-color: #470A67;
        color: #470A67;
    }

    .btn-outline-primary:hover {
        background: #470A67;
        color: white;
    }

    .btn-outline-success {
        border-color: #28a745;
        color: #28a745;
    }

    .btn-outline-success:hover {
        background: #28a745;
        color: white;
        }

    .btn-outline-warning {
        border-color: #ffc107;
        color: #ffc107;
    }

        .btn-outline-warning:hover {
            background: #ffc107;
            color: black;
        }

    .btn-outline-danger {
        border-color: #dc3545;
        color: #dc3545;
    }

        .btn-outline-danger:hover {
            background: #dc3545;
            color: white;
        }

    .btn-outline-info {
        border-color: #17a2b8;
        color: #17a2b8;
    }

        .btn-outline-info:hover {
            background: #17a2b8;
            color: white;
        }
</style>

<script>
    $(document).ready(function () {
        $(document).ready(function () {
            let table = $('#milestoneTable').DataTable({
                "paging": false,
                "searching": false,
                "ordering": false,
                "info": false
            });

            function loadDivisions() {
                $.get('/Admin/GetSavedDivisions', function (data) {
         
                    if (!data || data.length === 0) {
                        console.warn("No divisions found in the response.");
                        return;
                    }
                    table.clear();
                    data.forEach(function (division) {
                        table.row.add([
                            `<strong>${division.DivisionName}</strong>`,
                            division.NumberOfMilestones || 0, 
                            division.NumberOfRequirements || 0, 
                            `<div class="action-btns">
                    <a href="/Admin/CreateChecklist?divisionId=${division.DivisionID}" class="btn btn-outline-success btn-sm">
                        <i class="fas fa-plus"></i>
                    </a>
                    <button class="btn btn-outline-info btn-sm previewMilestone" data-id="${division.DivisionID}">
                        <i class="fas fa-eye"></i>
                    </button>
                    <button class="btn btn-outline-danger btn-sm removeMilestone" data-id="${division.DivisionID}">
                        <i class="fas fa-trash"></i>
                    </button>
                </div>`
                        ]).draw(false);
                    });
                    $('[data-bs-toggle="tooltip"]').tooltip();
                }).fail(function (xhr, status, error) {
                    console.error("Error fetching divisions:", error);
                });
            }

            loadDivisions();
        });

        $('#addMilestoneBtn').click(function () {
            let divisionId = $('#divisionDropdown').val();

            if (!divisionId) {
                Swal.fire({
                    icon: 'warning',
                    title: 'Select a Division!',
                    text: 'Please select a division before creating a milestone.',
                    confirmButtonColor: '#470A67'
                });
                return;
            }

            $.post('/Admin/SaveDivision', { divisionId: divisionId }, function (response) {
                if (response.success) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Success!',
                        text: response.message,
                        confirmButtonColor: '#470A67'
                    });
                    loadDivisions();
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error!',
                        text: response.message,
                        confirmButtonColor: '#470A67'
                    });
                }
            });
        });

        $(document).on('click', '.removeMilestone', function () {
            let divisionId = $(this).data('id');

            Swal.fire({
                title: 'Are you sure?',
                text: "This will remove the division from the table",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#dc3545',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Yes'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.post('/Admin/HideDivision', { divisionId: divisionId }, function (response) {
                        if (response.success) {
                            Swal.fire('Removed!', 'Successfully removed.', 'success');
                            loadDivisions();
                        } else {
                            Swal.fire('Error!', response.message, 'error');
                        }
                    });
                }
            });
        });

        $(document).tooltip({
            selector: '[data-bs-toggle="tooltip"]'
        });
    });

</script>
