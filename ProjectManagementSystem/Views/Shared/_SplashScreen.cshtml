@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Project Management System</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">

    <style>
        body {
            margin: 0;
            padding: 0;
            background: white;
            color: #66339A;
            font-family: 'Poppins', sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            overflow: hidden;
            position: relative;
        }

        .splash-container {
            text-align: center;
            animation: fadeIn 1.2s ease-in-out;
            z-index: 2;
        }

        .wave-text span {
            display: inline-block;
            font-size: 22px;
            font-weight: 500;
            color: #66339A;
            animation: waveBounce 1.3s infinite;
        }

            /* Stagger wave */
            .wave-text span:nth-child(n) {
                animation-delay: calc(0.05s * var(--i));
            }

        .wave-text span {
            --i: 0;
        }

            .wave-text span:nth-child(1) {
                --i: 1;
            }

            .wave-text span:nth-child(2) {
                --i: 2;
            }

            .wave-text span:nth-child(3) {
                --i: 3;
            }

            .wave-text span:nth-child(4) {
                --i: 4;
            }

            .wave-text span:nth-child(5) {
                --i: 5;
            }

            .wave-text span:nth-child(6) {
                --i: 6;
            }

            .wave-text span:nth-child(7) {
                --i: 7;
            }

            .wave-text span:nth-child(8) {
                --i: 8;
            }

            .wave-text span:nth-child(9) {
                --i: 9;
            }

            .wave-text span:nth-child(10) {
                --i: 10;
            }

            .wave-text span:nth-child(11) {
                --i: 11;
            }

            .wave-text span:nth-child(12) {
                --i: 12;
            }

            .wave-text span:nth-child(13) {
                --i: 13;
            }

            .wave-text span:nth-child(14) {
                --i: 14;
            }

            .wave-text span:nth-child(15) {
                --i: 15;
            }

            .wave-text span:nth-child(16) {
                --i: 16;
            }

            .wave-text span:nth-child(17) {
                --i: 17;
            }

            .wave-text span:nth-child(18) {
                --i: 18;
            }

            .wave-text span:nth-child(19) {
                --i: 19;
            }

            .wave-text span:nth-child(20) {
                --i: 20;
            }

        @@keyframes waveBounce {
            0%, 100% {
                transform: translateY(0);
            }

            50% {
                transform: translateY(-8px);
            }
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
            }

            to {
                opacity: 1;
            }
        }
    .logo {
        width: 90px;
        height: auto;
        margin-bottom: 20px;
        animation: floatBounce 2.5s ease-in-out infinite;
        transform-origin: center;
    }

    @@keyframes floatBounce {
        0%   { transform: translateY(0px); }
        50%  { transform: translateY(-10px); }
        100% { transform: translateY(0px); }
    }
  
    </style>
</head>
<body>

    <div class="splash-container">
        <img src="~/AdminLTE-3.2.0/dist/img/ek.png" alt="Access Denied Icon" class="logo" />
        <div class="wave-text">
            <span>O</span><span>n</span><span>e</span><span>&nbsp;</span>
            <span>m</span><span>o</span><span>m</span><span>e</span><span>n</span><span>t</span><span>&nbsp;</span>
            <span>p</span><span>l</span><span>e</span><span>a</span><span>s</span><span>e</span><span>.</span><span>.</span><span>.</span>
        </div>
    </div>
</body>
</html>
