@model ProjectManagementSystem.Models.WeeklyStatu
@Html.Partial("_navbar")


@{
    ViewBag.Title = "Weekly Status";
}

<head>
    <style>
        .modal-body {
            padding: 20px;
            margin-left: 160px;
        }
    </style>
</head>

<div class="status-container">
    <h2>Weekly Status</h2>

    <div class="row">
        <div class="col-md-3">
                <div class="card-body"> 
                    
                </div>
            </div>
        </div>
    </div>
</div>




<div class="container">
    <form asp-action="SubmitWeeklyStatus" method="post" enctype="multipart/form-data">
        <div class="modal-body">
            <h2>Weekly Status</h2>
            <div class="form-group">
                @Html.LabelFor(x => x.description, "Description")
                @Html.TextAreaFor(x => x.description, new { @class = "form-control", rows = 5, placeholder = "Enter your weekly status here..." })
            </div>

            <div class="form-group">
                @Html.Label("Attachment")
                <input type="file" name="Attachment" class="form-control" />
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>
