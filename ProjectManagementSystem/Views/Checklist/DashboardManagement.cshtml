                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Project Name</th>
                                        @foreach (var milestoneName in Model.UniqueMilestoneNames)
                                        {
                                            <th>@milestoneName (OS/CS)</th>
                                        }
                                    </tr>
                                </thead>
                                <tbody>
                                        <tr>
                                            <td>
                                                <a href="@Url.Action("weeklyMilestone", "Checklist", new { id = divisionGroup.MainId })" class="text-decoration-none text-primary">
                                                    @divisionGroup.ProjectTitle
                                                </a>
                                            </td>
                                            @foreach (var milestoneName in Model.UniqueMilestoneNames)
                                            {
