@model List<ProjectManagementSystem.Models.RegistrationTbl>
@using System;

@{
    ViewBag.Title = "Project Onboarding";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<head>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <style>
    body {
        font-family: 'Poppins', sans-serif;
    }

    .content {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        background-color: #f4f6f9;
    }

    .form-container {
        width: 500px; 
        padding: 60px 30px; 
        background-color: white;
        border-radius: 12px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    .form-container h3 {
        font-size: 1.5rem;
        color: #66339A; 
        margin-bottom: 10px;
    }

    .form-container p {
        color: #666;
        margin-bottom: 20px;
        font-size: 0.9rem;
    }

    .form-group label {
        font-weight: 500;
        font-size: 0.9rem;
        color: #333;
        display: block;
        text-align: left;
        margin-bottom: 5px;
    }
    .form-control {
        width: 100% !important; 
        box-sizing: border-box; 
    }
    .form-control, .form-control-file {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        font-size: 1rem;
        margin-bottom: 15px;
    }
    .form-container select.form-control {
        width: 100% !important; 
        max-width: 100%; 
        box-sizing: border-box; 
    }

        .btn-primary {
            width: 100%;
            background-color: #66339A;
            border: none;
            padding: 12px;
            color: #fff;
            /*font-weight: 600;*/
            border-radius: 8px;
            cursor: pointer;
            font-size: 1rem;
            transition: background-color 0.3s ease;
        }

    .btn-primary:hover {
        background-color: #2d5bb8;
    }

    .form-text {
        font-size: 0.8rem;
        color: #888;
        margin-top: -10px;
        margin-bottom: 15px;
    }


    </style>
</head>

<!-- Main content -->
<div class="content">
    <div class="form-container">
        <h3>Create a new project</h3>
        <p>Tell us about your project</p>

        <!-- form start -->
        <form id="onboardingForm" name="onboardingForm" enctype="multipart/form-data">
            @Html.AntiForgeryToken()

            <!-- project title dropdown -->
            <div class="form-group">
                <label for="projectTitle">Project name</label>
                <select class="form-control" id="projectTitle" name="projectTitle" required>
                    <option value="" disabled selected>Select project name</option>
                    @foreach (var project in Model)
                    {
                        <option value="@project.registration_id">@project.project_name</option>
                    }
                </select>
            </div>

            <!-- file upload -->
            <div class="form-group">
                <label for="csv-file-input">Upload</label>
                <input type="file" id="csv-file-input" accept=".csv" class="form-control-file" required />
                <small class="form-text">Accepted format: .csv</small>
            </div>

            <!-- Submit Button -->
            <button id="addProjButton" type="button" class="btn btn-primary" onclick="AddProject()">Upload project schedule</button>
        </form>
    </div>
</div>

<!-- Add Project Form Script -->
@section scripts {
    <script src="~/AdminLTE-3.2.0/plugins/jquery/jquery.min.js"></script>

    <script>
        function AddProject() {
            var fileUpload = document.getElementById("csv-file-input");
            var projectTitle = $('#projectTitle').val();

            if (!fileUpload.value) {
                alert("Please upload a CSV file.");
                return;
            }

            var formData = new FormData();
            var file = $("#csv-file-input").get(0).files;

            if (file.length > 0) {
                formData.append("pmcsv", file[0]);
                formData.append("projectTitle", projectTitle);

                $.ajax({
                    url: "@Url.Action("AddProjectUpload", "Checklist")",
                    type: "POST",
                    processData: false,
                    contentType: false,
                    data: formData,
                    success: function (res) {
                        if (res.status) {
                            $.notify(res.message, { position: "bottom center", showAnimation: 'slideDown', className: 'success' });
                            $("#csv-file-input").val("");
                        } else {
                            $.notify(res.message, { position: "bottom center", showAnimation: 'slideDown', className: 'error' });
                        }
                    }
                });
            } else {
                alert("No file selected.");
            }
        }
    </script>
}
