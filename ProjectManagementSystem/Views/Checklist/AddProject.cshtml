@model List<ProjectManagementSystem.Models.RegistrationTbl>
@using System;

@{
    ViewBag.Title = "Project Onboarding";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<head>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <style>
        body {
            font-family: 'Poppins', sans-serif;
        }
        .content {
            display: flex;
            justify-content: center; 
            align-items: center; 
            min-height: 100vh; 
        }

        .form-container {
            max-width: 600px;
            padding: 50px 20px;
            background-color: #f9f9f9;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            text-align: center;
            margin: auto; 
        }

        .form-group label {
            font-weight: bold;
            color: #333;
        }

        .form-control, .form-control-file {
            width: 100%;
            padding: 10px;
            margin-top: 5px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-shadow: inset 0 1px 3px rgba(0, 0, 0, .12);
        }

        .btn-primary {
            background-color: #66339A;
            border: none;
            padding: 10px 20px;
            color: #fff;
            font-weight: bold;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #532c7e;
            }

        .form-text {
            font-size: 0.9rem;
            color: #555;
        }

        .form-footer {
            text-align: right;
            padding-top: 20px;
        }
    </style>
</head>

<!-- Main content -->
<div class="content">
    <div class="form-container">
        <h3 style="color: #66339A;"><strong>Project Onboarding Form</strong></h3>
        <p class="text-muted">Please select your project and upload the schedule file below</p>

        <!-- form start -->
        <form id="onboardingForm" name="onboardingForm" enctype="multipart/form-data">
            @Html.AntiForgeryToken()

            <!-- project title dropdown -->
            <div class="form-group">
                <label for="projectTitle"><strong>Select Project Title</strong></label>
                <select class="form-control" id="projectTitle" name="projectTitle" required>
                    <option value="" disabled selected>Select a Project</option>
                    @foreach (var project in Model)
                    {
                        <option value="@project.registration_id">@project.project_name</option>
                    }
                </select>
            </div>

            <!-- file upload -->
            <div class="form-group">
                <label for="csv-file-input"><strong>Upload Schedule</strong></label>
                <input type="file" id="csv-file-input" accept=".csv" class="form-control-file" required />
                <small class="form-text text-muted">Accepted format: .csv</small>
            </div>

            <!-- Submit Button -->
            <div class="form-footer">
                <button id="addProjButton" type="button" class="btn btn-primary" onclick="AddProject()">Save</button>
            </div>
        </form>
    </div>
</div>

<!-- Add Project Form Script -->
@section scripts {
    <script src="~/AdminLTE-3.2.0/plugins/jquery/jquery.min.js"></script>

    <script>
        function AddProject() {
            var fileUpload = document.getElementById("csv-file-input");
            var projectTitle = $('#projectTitle').val();

            if (!fileUpload.value) {
                alert("Please upload a CSV file.");
                return;
            }

            var formData = new FormData();
            var file = $("#csv-file-input").get(0).files;

            if (file.length > 0) {
                formData.append("pmcsv", file[0]);
                formData.append("projectTitle", projectTitle);

                $.ajax({
                    url: "@Url.Action("AddProjectUpload", "Checklist")",
                    type: "POST",
                    processData: false,
                    contentType: false,
                    data: formData,
                    success: function (res) {
                        if (res.status) {
                            $.notify(res.message, { position: "bottom center", showAnimation: 'slideDown', className: 'success' });
                            $("#csv-file-input").val("");
                        } else {
                            $.notify(res.message, { position: "bottom center", showAnimation: 'slideDown', className: 'error' });
                        }
                    }
                });
            } else {
                alert("No file selected.");
            }
        }
    </script>
}
