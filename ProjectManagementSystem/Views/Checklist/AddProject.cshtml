        }

        .modal-title {
            margin: 0;
        }

        .modal-content {
            border-radius: 10px;
            border: 2px solid #5C2D91;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            padding: 20px;
        }

        .modal-footer {
            padding: 15px;
            border-top: 1px solid #ddd;
            display: flex;
            justify-content: flex-end;
        }

            .modal-footer button {
                margin-left: 10px;
                background-color: #5C2D91;
                border: none;
                color: #fff;
                padding: 10px 20px;
                font-size: 16px;
