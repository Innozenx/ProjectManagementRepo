<!-- Content Section -->
<div class="content-section">
    <div class="card-container wide-card-container">
        @if (Model.ProjectsByDivision != null && Model.ProjectsByDivision.Any())
        {
            <div class="vertical-tabs-container">
                <!-- Tabs Navigation -->
                <div class="tabs-navigation">
                    <ul class="nav flex-column nav-pills" id="divisionTabs" role="tablist">
                        @foreach (var division in Model.ProjectsByDivision.Keys)
                        {
                            <li class="nav-item">
                                <a class="nav-link @((division == Model.ProjectsByDivision.Keys.First()) ? "active" : "")"
                                   id="tab-@division.Replace(" ", "-")"
                                   data-toggle="pill"
                                   href="#content-@division.Replace(" ", "-")"
                                   role="tab"
                                   aria-controls="content-@division.Replace(" ", "-")"
                                   aria-selected="@((division == Model.ProjectsByDivision.Keys.First()).ToString().ToLower())">
                                    @division Division
                                </a>
                            </li>
                        }
                    </ul>
                </div>

                <!-- Tabs Content -->
                <div class="tab-content" id="divisionTabsContent">
                    @foreach (var divisionGroup in Model.ProjectsByDivision)
                    {
                        <div class="tab-pane fade @((divisionGroup.Key == Model.ProjectsByDivision.Keys.First()) ? "show active" : "")"
                             id="content-@divisionGroup.Key.Replace(" ", "-")"
                             role="tabpanel"
                             aria-labelledby="tab-@divisionGroup.Key.Replace(" ", "-")">
                            <h5 class="card-title">@divisionGroup.Key Division</h5>
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Project Name</th>
                                        @foreach (var milestoneName in Model.UniqueMilestoneNames)
                                        {
                                            <th>@milestoneName <br />(OS/CS)</th>
                                        }
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var project in divisionGroup.Value)
                                    {
                                        <tr>
                                            <td>
                                                <a href="@Url.Action("weeklyMilestone", "Checklist", new { id = project.MainId })" class="text-decoration-none text-primary">
                                                    @project.ProjectTitle
                                                </a>
                                            </td>
                                            @foreach (var milestoneName in Model.UniqueMilestoneNames)
                                            {
                                                var milestone = project.Milestones?.FirstOrDefault(m => m.MilestoneName == milestoneName);

                                                // OS (Original Schedule)
                                                var osFormatted = milestone?.EndDate.HasValue == true
                                                    ? $"WW {milestone.EndDate.Value:yy}{CultureInfo.InvariantCulture.Calendar.GetWeekOfYear(milestone.EndDate.Value, CalendarWeekRule.FirstDay, DayOfWeek.Sunday):00}"
                                                    : "-";

                                                // CS (Current Schedule)
                                                var csFormatted = milestone?.CurrentTaskEnd.HasValue == true
                                                    ? $"WW {milestone.CurrentTaskEnd.Value:yy}{CultureInfo.InvariantCulture.Calendar.GetWeekOfYear(milestone.CurrentTaskEnd.Value, CalendarWeekRule.FirstDay, DayOfWeek.Sunday):00}"
                                                    : "-";

                                                // OS / CS Combined
                                                var combinedFormatted = (osFormatted != csFormatted && csFormatted != "-")
                                                    ? $"{osFormatted} / {csFormatted}"
                                                    : osFormatted;

                                                <td class="duedate-colors">@combinedFormatted</td>
                                            }
                                            }
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
                }
                else
                {
                <div style="text-align: center; padding: 20px;">
                    <h5>Your dashboard is looking a little empty - start your project now!</h5>
                    <br />
                    <a href="@Url.Action("AddProject", "Checklist")" class="invite-button">Let's get started</a>
                </div>
                }
            </div>
        </div>


