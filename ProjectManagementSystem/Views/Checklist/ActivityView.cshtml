@using ProjectManagementSystem.Models
@{
    ViewBag.Title = "Activity Logs";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="~/Scripts/dataTables.dataTables.min.css" rel="stylesheet" />

<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #F8FAFD;
        margin: 0;
        padding: 0;
    }

    .container {
        max-width: 90%;
        margin: 20px auto;
        padding: 20px 30px;
        background: #FFFFFF;
        border-radius: 12px;
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    h2 {
        font-size: 26px;
        font-weight: 700;
        color: #66399A;
        text-align: center;
        margin: 10px 0 20px;
        position: relative;
    }

        h2::after {
            content: "";
            display: block;
            width: 70px;
            height: 3px;
            background-color: #66399A;
            margin: 10px auto 0;
            border-radius: 2px;
        }

    .table-wrapper {
        overflow-x: auto;
        border-radius: 10px;
        border: 1px solid #E0E6ED;
    }

    #activityGrid {
        width: 100%;
        border-collapse: collapse;
    }

        #activityGrid thead th {
            background-color: #F4F6FA;
            color: #7A8FA6;
            text-align: left;
            padding: 12px;
            font-size: 14px;
            font-weight: 600;
            border-bottom: 1px solid #E0E6ED;
        }

        #activityGrid tbody td {
            padding: 10px;
            font-size: 14px;
            color: #33475B;
            border-bottom: 1px solid #E0E6ED;
        }

        #activityGrid tbody tr:hover {
            background-color: #F0F7FF;
            transition: all 0.2s ease;
        }

    @@media (max-width: 768px) {
        .container {
            padding: 15px;
        }

        h2 {
            font-size: 22px;
            margin: 5px 0 15px;
        }

        #activityGrid thead th,
        #activityGrid tbody td {
            padding: 8px;
            font-size: 12px;
        }
    }
</style>

<h2>Activity Logs</h2>

<div class="loader-body">
    <div class="loader-container">
        <span class="loader-span"></span>
        <div class="loader-center">
            <div class="loader-wrap">
                <div class="box-1 box">

                    <i><img src="~/FrontEnd/dist/img/smiley_eldar.png" class="eldar-img" /></i>
                    <i><img src="~/FrontEnd/dist/img/happy_eldar.png" class="eldar-img" /></i>
                </div>
                <div class="box-2 box">
                    <i><img src="~/FrontEnd/dist/img/smiley_eldar.png" class="eldar-img" /></i>
                    <i><img src="~/FrontEnd/dist/img/happy_eldar.png" class="eldar-img" /></i>
                </div>
            </div>
        </div>
    </div>
</div>

<a href="https://dribbble.com/YancyMin" class="dr-url" target="_blank"><img class="dr" src="https://cdn.dribbble.com/assets/logo-footer-hd-a05db77841b4b27c0bf23ec1378e97c988190dfe7d26e32e1faea7269f9e001b.png" alt=""></a>

<div class="main-body d-none">
    <div class="container">
        <div class="table-wrapper">
            <table id="activityGrid" class="table table-striped dt-responsive nowrap">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>User</th>
                        <th>Date</th>
                        <th>Action</th>
                        <th>Description</th>
                        <th>Department</th>
                        <th>Division</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>


@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.js" integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4=" crossorigin="anonymous"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script>
        $(document).ready(function () {
            $(".main-body").removeClass("d-none");
            $(".loader-body").addClass("d-none");

            $('#activityGrid').DataTable({
                processing: true,
                serverSide: true,
                ajax: {
                    url: "@Url.Action("ActivityList", "Checklist")",
                    type: "POST"
                },
                columns: [
                    { data: "log_id" },
                    { data: "user" },
                    { data: "date" },
                    { data: "action" },
                    { data: "description" },
                    { data: "department" },
                    { data: "division" }
                ],
                responsive: true
            });
        });
    </script>
}
