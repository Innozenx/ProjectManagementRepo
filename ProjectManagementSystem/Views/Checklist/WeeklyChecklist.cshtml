    <script>


        function weeklyMilestone(thVal) {
            weekCheck = $(thVal).attr("value");
            weekTitle = $(thVal).attr("id");
            {
                window.location.href = '@Url.Action("weeklyMilestone", "Checklist")?id=' + weekCheck + '&title=' + weekTitle;
            }

        }
    </script>
}
