@{
    ViewBag.Title = "Access Denied";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .access-denied-container {
        text-align: center;
        margin-top: 50px;
        color: #333;
    }

    .access-denied-container img {
        width: 120px; 
        margin-bottom: 20px;
    }

    .access-denied-container h1 {
        font-size: 2em;
        color: #dd3333;
    }

    .access-denied-container p {
        font-size: 1.2em;
        margin-top: 10px;
    }

    .access-denied-container .btn {
        font-family: 'Poppins', sans-serif;
        background-color: #470A67;
        border: none;
        padding: 10px 20px;
        color: #fff;
        /*font-weight: bold;*/
        border-radius: 5px;
        transition: background-color 0.3s ease;
        /*width: 100%;*/
        font-size: 16px;
    }

    .access-denied-container .btn:hover {
        background-color: #0056b3;
    }
</style>
<div class="access-denied-body">
    <div class="access-denied-container">
        <img src="~/AdminLTE-3.2.0/dist/img/ek.png" alt="Access Denied Icon" />
        <h1> <i class="fa fa-lock"></i> Access Restricted</h1>
        <p>You do not have permission to view this page.</p>
        @*<a href="@Url.Action("Logout", "Account")" class="btn">Return to Log In</a>*@
        <a href="@Url.Action("Dashboard", "Checklist")" class="btn">Home</a>
    </div>
</div>