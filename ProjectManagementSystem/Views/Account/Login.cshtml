@using ProjectManagementSystem.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
    Layout = null;
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" crossorigin="anonymous">
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">

<style>
    body {
        margin: 0;
        padding: 0;
        font-family: 'Poppins', sans-serif;
        background: linear-gradient(to bottom right, #f8f9fa, #e6e6f2);
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .login-card {
        background: #fff;
        padding: 40px;
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        max-width: 400px;
        width: 100%;
        text-align: center;
    }

        .login-card img {
            width: 100px;
            margin-bottom: 15px;
        }

        .login-card h1 {
            font-size: 1.6rem;
            font-weight: 600;
            margin-bottom: 10px;
            color: #470A67;
        }

        .login-card p {
            color: #666;
            margin-bottom: 25px;
            font-size: 0.95rem;
        }

    .form-group {
        text-align: left;
        margin-bottom: 20px;
    }

        .form-group label {
            display: block;
            font-size: 0.9rem;
            margin-bottom: 6px;
            color: #333;
        }

        .form-group input {
            width: 100%;
            padding: 10px 15px;
            border: 1px solid #ccc;
            border-radius: 30px;
            font-size: 0.9rem;
            transition: border 0.2s;
            font-family: 'Poppins', sans-serif;
        }

            .form-group input:focus {
                outline: none;
                border-color: #66339A;
            }

    .btn-primary {
        background-color: #66339A;
        color: white;
        border: none;
        border-radius: 30px;
        padding: 10px 30px;
        font-size: 0.95rem;
        width: 100%;
        cursor: pointer;
        transition: background-color 0.3s ease;
        font-family: 'Poppins', sans-serif;
    }

        .btn-primary:hover {
            background-color: #55227d;
        }

    .text-danger {
        color: red;
        font-size: 0.85rem;
        font-family: 'Poppins', sans-serif;
    }

    .toggle-password {
        position: absolute;
        right: 20px;
        top: 38px;
        cursor: pointer;
        color: #aaa;
    }

    .input-wrapper {
        position: relative;
    }
    input:invalid {
        border-color: #e74c3c;
    }
    input:focus {
        border-color: #66339A;
        box-shadow: 0 0 0 2px rgba(102, 51, 154, 0.1);
    }
    .btn-primary:hover {
        background-color: #5a2b8c;
        box-shadow: 0 4px 10px rgba(102, 51, 154, 0.2);
    }



</style>

<div class="login-card">
    <img src="~/AdminLTE-3.2.0/dist/img/30thEK.jpg" alt="PMS" />
    <h1>Project Management System</h1>
    <p>Sign in with your assigned credentials.</p>
    <hr />
    <br />

    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(m => m.Email)
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "you@enchantedkingdom.ph" })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        </div>

        <div class="form-group input-wrapper">
            @Html.LabelFor(m => m.Password)
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "••••••••", id = "password" })
            <i class="fas fa-eye toggle-password" onclick="togglePassword()"></i>
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
        </div>

        <button type="submit" class="btn-primary">Sign in</button>
    }
</div>

<script src="~/AdminLTE-3.2.0/plugins/jquery/jquery.min.js"></script>
<script>
    function togglePassword() {
        const input = document.getElementById('password');
        const icon = document.querySelector('.toggle-password');
        if (input.type === 'password') {
            input.type = 'text';
            icon.classList.remove('fa-eye');
            icon.classList.add('fa-eye-slash');
        } else {
            input.type = 'password';
            icon.classList.remove('fa-eye-slash');
            icon.classList.add('fa-eye');
        }
    }
</script>
